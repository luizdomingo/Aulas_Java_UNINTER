package aulas_UNINTER;

import java.util.Scanner;

public class Main 
{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		int opc;
		
		System.out.println("---------------------------------------------------------");
		System.out.println("Por favor escolha uma opcao...\n");
		System.out.println(" 1 - Para adcionar ");
		System.out.println(" 2 - Para remover  ");
		System.out.println(" 3 - Para listar   ");
		System.out.println(" 4 - Para calcular o valor da moeda convertido em real ");
		System.out.println(" 0 - Para sair \n");
		System.out.println("---------------------------------------------------------");
		
		/* Variavél onde armazena a nossa opção de escolha */
		opc = sc.nextInt();
		
		/* Iniciando o Loop */
		while(opc != 0) 
		{
			switch (opc)
			{
				case 1: 
					break;
				
				case 2:;
					break;
				
				case 3:
					break;
				
				case 4:
					break;
			
			}
			
		}
		
		sc.close();
	}

}
